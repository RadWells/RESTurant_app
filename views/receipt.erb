 <h2>RECEIPT for Table <%= @party.table_number %></h2>


<h6>
  <%= Time.now.strftime("on %m/%d/%Y at %I:%M%p") %>
</h6>

<table>
  <tr>
    <th>
      Orders
    </th>
    <th>
      Price
    </th>
  </tr>
  <% total = 0 %>
  <% @party.foods.each do |food| %> 
    <tr>
      <td>
        <%= food.name %>
      </td>
      <td>
        $<%= food.price.round(2) %>
      </td>
    </tr>
  <% total += food.price %> 
  <% end %>
  <tr>
    <th>
      TOTAL
    </th>
    <th>
      $<%= total.round(2) %>
    </th>
  </tr>
  <tr>
    <th>
      Tip Suggestions
    </th>
  </tr> 
  <tr>
    <td>
      15% = $<%= (total * 0.15).round(2) %>
    </td>
    <td>
      20% = $<%= (total * 0.20).round(2) %>
    </td>
    <td>
      25% = $<%= (total * 0.25).round(2) %>
    </td>
  </tr>
</table>

<h4>Thanks for coming to Skeet's. See you soon!</h4> 


<a href="javascript:if(window.print)window.print()">Print</a>













<form action="/parties/<= @party.id%>/receipt " method="get">
  <input type="hidden" name="_method" value="patch">
  <input type="hidden" name="party.paid" value="true">
  <input type="submit" value="Checkout">
</form> 
